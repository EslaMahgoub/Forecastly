<% provide(:title, "Login") %>

<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3 ">
  <h1>Login</h1>
  <%= simple_form_for :session, :url => login_path, :html => { :class => 'form-vertical' }   do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.button :submit, "Login", class:"btn btn-primary m-2 "%>
  <% end %>
    New User? <%= link_to 'Create Account', '/signup' %>
  
  </div>
</div>